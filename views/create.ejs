<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-lg">
      <h2 class="text-3xl font-bold text-center text-zinc-800 mb-6">Create a New Post</h2>
      
      <form action="/admin/create" method="POST">
        <!-- Title Field -->
        <div class="mb-4">
          <label for="title" class="block text-zinc-700 text-sm font-bold mb-2">Post Title:</label>
          <input 
            type="text" 
            name="title" 
            id="title" 
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Enter post title"
            required>
        </div>
        
        <!-- Content Field -->
        <div class="mb-6">
          <label for="content" class="block text-zinc-700 text-sm font-bold mb-2">Post Content:</label>
          <textarea 
            name="content" 
            id="content" 
            rows="6" 
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Write the content of the post"
            required></textarea>
        </div>
        
        <!-- Submit Button -->
        <div class="flex justify-center">
          <button 
            type="submit" 
            class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition">
            Create Post
          </button>
        </div>
      </form>
    </div>
  </div>
  